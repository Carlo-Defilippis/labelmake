{
    "compilerOptions": {
        "target": "esnext",
        "module": "umd",
        "declaration": true,
        "strict": true,
        "typeRoots": [
            "src/",
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
    ],
}